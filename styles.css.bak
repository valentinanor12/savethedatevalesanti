/* ================== RESET ================== */* {  box-sizing: border-box;  margin: 0;  padding: 0;}html, body {  height: 100%;  width: 100%;   background-color: #fdf6ee;  font-family: "Georgia", serif;  -webkit-text-size-adjust: 100%;}/* ================== CONTAINER ================== */.container {  min-height: 100vh;  width: 100%;    display: flex;  justify-content: center;  align-items: center;  flex-direction: column;  padding: 16px;}/* ================== CARD CONTAINER ================== */.card-container {  perspective: 1000px;  width: min(92vw, 420px);  /* max-width removed for responsiveness */  height: auto;  aspect-ratio: 141 / 100;    max-height: 90vh;  margin: 0 auto;  cursor: pointer;  position: relative;  box-sizing: border-box;  -webkit-tap-highlight-color: transparent;  touch-action: manipulation;}/* ================== CARD ================== */.card {  width: 100%;  height: 100%;  position: relative;  transform-style: preserve-3d;  -webkit-transform-style: preserve-3d;  transition: transform 0.7s;  -webkit-transition: transform 0.7s;  will-change: transform;}.card.flip {  transform: rotateY(180deg);}/* ================== FRONTS & BACKS ================== */.front, .back {  position: absolute;  left: 0;  top: 0;  width: 100%;  height: 100%;  backface-visibility: hidden;  -webkit-backface-visibility: hidden;  border-radius: 12px;  overflow: hidden;}.back {  transform: rotateY(180deg);}.card img {  width: 100%;  height: 100%;  object-fit: cover;  max-width: 100%;  display: block;}/* ================== HINT ================== */.hint {  position: absolute;  left: 50%;  transform: translateX(-50%);  bottom: 14px;  background: rgba(0,0,0,0.65);  color: #fff;  padding: 8px 12px;  border-radius: 18px;  font-size: 14px;  line-height: 1;  z-index: 20;  pointer-events: none;  opacity: 1;  transition: opacity 250ms ease, transform 250ms ease;}.hint.hidden {  opacity: 0;  transform: translateX(-50%) translateY(6px);  visibility: hidden;}.card-container:hover .hint {  opacity: 1;  visibility: visible;}/* ================== FALLBACK PARA NAVEGADORES ANTIGUOS ================== */@supports not (aspect-ratio: 1 / 1) {  .card-container {    min-height: 320px;    max-height: 90vh;  }}/* ================== MEDIA QUERIES ================== */@media (max-width: 768px) {  .container {    padding: 16px;    align-items: center;  }.card-container {  width: min(94vw, 420px);  max-width: 600px;       /* Más ancho en horizontal */  max-width: none;  height: auto;           /* Altura proporcional eliminada: ajusta al contenedor */  max-height: 88vh;  margin: 12px auto;  cursor: pointer;  position: relative;  border-radius: 12px;  overflow: hidden;  /* Aquí está la rotación */  /* rotation removed on mobile for better UX */  /* transform-origin removed */  /* Para que no afecte la disposición del resto */  display: flex;  justify-content: center;  align-items: center;}/* La imagen debe llenar el contenedor */.card img {  width: 100%;  height: 100%;  object-fit: cover;  border-radius: 12px;}/* Opcional: hacer que el hint se muestre bien y no se superponga */.hint {  position: absolute;  bottom: 10px;  left: 50%;  transform: translateX(-50%);  /* margin-top removed */  background: rgba(0, 0, 0, 0.65);  color: white;  padding: 7px 10px;  border-radius: 12px;  font-size: 13px;  pointer-events: none;  width: max-content;}}@media (max-width: 480px) {  .card-container {    width: 94vw;    max-width: none;  }  .hint {    font-size: 12px;    padding: 5px 8px;  }}/* ================== TIPOGRAFÍA ESCALABLE ================== */body {  font-size: calc(14px + 0.3vw);}/* Respeta usuarios con menos animación */@media (prefers-reduced-motion: reduce) {  .card {    transition: none;  }}
